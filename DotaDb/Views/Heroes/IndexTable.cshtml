<div class="row">
    <div class="col-md-8 col-md-offset-2">
        @if (!HttpContext.Current.IsDebuggingEnabled)
        {
        <!-- top heroes table (dotadb) -->
            <ins class="adsbygoogle"
                 style="display:block"
                 data-ad-client="ca-pub-1823005717277864"
                 data-ad-slot="9101692236"
                 data-ad-format="auto"></ins>
                <script>
                    (adsbygoogle = window.adsbygoogle || []).push({});
                </script>
        }
        else
        {
            <div style="width: 610px; margin: 5px auto;">
                <img src="https://placehold.it/600x90" />
            </div>
        }
    </div>
</div>

<ul class="nav nav-pills" style="margin-bottom: 10px">
    <li role="presentation">
        <a href="@Url.Action("index", new { tab = "grid" })">
            <i class="fa fa-th"></i> Grid
        </a>
    </li>
    <li role="presentation" class="active">
        <a href="@Url.Action("index", new { tab = "table" })">
            <i class="fa fa-table"></i> Table
        </a>
    </li>
</ul>
<table class="table table-striped table-condensed hero-table table-bordered" data-toggle="table">
    <thead>
        <tr>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th colspan="3">Gain per Level</th>
            <th></th>
            <th colspan="2">Damage</th>
            <th colspan="3">Attack</th>
        </tr>
        <tr>
            <th>Hero</th>
            <th>Primary</th>
            <th data-sortable="true">HP</th>
            <th data-sortable="true">MP</th>
            <th data-sortable="true">Armor</th>
            <th data-sortable="true">Str</th>
            <th data-sortable="true">Agi</th>
            <th data-sortable="true">Int</th>
            <th data-sortable="true">Str</th>
            <th data-sortable="true">Agi</th>
            <th data-sortable="true">Int</th>
            <th data-sortable="true">Speed</th>
            <th data-sortable="true">Min</th>
            <th data-sortable="true">Max</th>
            <th data-sortable="true">Range</th>
            <th data-sortable="true">Rate</th>
            <th data-sortable="true">Type</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var hero in Model.StrengthHeroes)
        {
            Html.RenderPartial("_HeroTableRowPartial", hero);
        }
        @foreach (var hero in Model.AgilityHeroes)
        {
            Html.RenderPartial("_HeroTableRowPartial", hero);
        }
        @foreach (var hero in Model.IntelligenceHeroes)
        {
            Html.RenderPartial("_HeroTableRowPartial", hero);
        }
    </tbody>
</table>

<div class="row" style="margin-top: 15px">
    <div class="col-md-8 col-md-offset-2">
        @if (!HttpContext.Current.IsDebuggingEnabled)
        {
        <!-- bottom heroes table (dotadb) -->
            <ins class="adsbygoogle"
                 style="display:block"
                 data-ad-client="ca-pub-1823005717277864"
                 data-ad-slot="1578425435"
                 data-ad-format="auto"></ins>
                <script>
                    (adsbygoogle = window.adsbygoogle || []).push({});
                </script>
        }
        else
        {
            <div style="width: 610px; margin: 5px auto;">
                <img src="https://placehold.it/600x90" />
            </div>
        }
    </div>
</div>

@section Scripts {
    @if (!HttpContext.Current.IsDebuggingEnabled)
    {
        <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
    }
    @Scripts.Render("~/bundles/bootstrap-table")
}
