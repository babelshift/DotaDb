@model DotaDb.ViewModels.HeroSelectViewModel

@{
    ViewBag.Title = "All Heroes";
    ViewBag.Description = String.Format("There are currently {0} agility heroes, {1} intelligence heroes, and {2} strength heroes in Dota 2.", Model.AgilityHeroes.Count, Model.IntelligenceHeroes.Count, Model.StrengthHeroes.Count);
    ViewBag.HeaderImageName = "bg5_fade.jpg";
    ViewBag.HeaderText = "Heroes (Grid)";
}

