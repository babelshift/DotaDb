@model DotaDb.ViewModels.HeroViewModel

<tr>
    <td style="text-align: left">
        <img src="@Model.MinimapIconPath" />
        <a href="@Url.Action("hero", new { id = Model.Id, heroName = Model.Url.ToLower() })">
            @Model.Name
        </a>
    </td>
    @if (Model.PrimaryAttribute.Key == SourceSchemaParser.Dota2.DotaHeroPrimaryAttributeType.STRENGTH.Key)
    {
        <td><img src="~/Content/icon_str.png" width="32" height="32" /></td>
    }
    else if (Model.PrimaryAttribute.Key == SourceSchemaParser.Dota2.DotaHeroPrimaryAttributeType.AGILITY.Key)
    {
        <td><img src="~/Content/icon_agi.png" width="32" height="32" /></td>
    }
    else if (Model.PrimaryAttribute.Key == SourceSchemaParser.Dota2.DotaHeroPrimaryAttributeType.INTELLECT.Key)
    {
        <td><img src="~/Content/icon_int.png" width="32" height="32" /></td>
    }
    else
    {
        <td><i class="fa fa-question-circle"></i></td>
    }
    <td>@Model.GetBaseHealth()</td>
    <td>@Model.GetBaseMana()</td>
    <td>@Model.BaseArmor</td>
    <td>@Model.BaseStrength</td>
    <td>@Model.BaseAgility</td>
    <td>@Model.BaseIntelligence</td>
    <td>@Model.StrengthGain</td>
    <td>@Model.AgilityGain</td>
    <td>@Model.IntelligenceGain</td>
    <td>@Model.BaseMoveSpeed</td>
    <td>@Model.BaseDamageMin</td>
    <td>@Model.BaseDamageMax</td>
    <td>@Model.AttackRange</td>
    <td>@Model.AttackRate</td>
    <td>@Model.AttackType</td>
</tr>