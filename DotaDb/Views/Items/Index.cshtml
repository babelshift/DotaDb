@model IReadOnlyCollection<DotaDb.ViewModels.GameItemViewModel>

@{
    ViewBag.Title = "Items in Game";
}



@Html.Partial("_BreadcrumbMenuPartial", "In Game")
@Html.Partial("_TabMenuPartial", "ingame")
<div class="row">
    <div class="col-xs-12" style="padding: 4px">
        <form class="form-inline">
            <div class="form-group">
                <input type="text" class="form-control" id="item-name" placeholder="Filter for an item by name">
            </div>
            <button type="submit" class="btn btn-default">
                <i class="fa fa-search"></i>
                Filter Items
            </button>
        </form>
    </div>
</div>
<br />
<div class="row item-list">
    @foreach (var gameItem in Model)
    {
        <div class="col-md-4" style="padding: 4px">
            <div class="well well-sm" style="padding: 5px; margin-bottom: 0">
                <div class="media" style="margin-bottom: 0">
                    <div class="media-left">
                        <div class="thumbnail" style="margin: 0; border: 0" title="@gameItem.Name">
                            <img src="@gameItem.IconPath" class="shadow" width="64" />
                        </div>
                    </div>
                    <div class="media-body">
                        <h4 class="media-heading">
                            @if (!String.IsNullOrEmpty(gameItem.Name))
                            {
                                @gameItem.Name
                            }
                            else
                            {
                                @:Undefined
                            }
                        </h4>
                        <p class="text-muted">@gameItem.Lore</p>
                    </div>
                    <div class="row" style="margin-bottom: 0">
                        <div class="col-xs-6 text-uppercase">
                            <p>
                                <small class="text-muted">ID:</small>
                                <small>@gameItem.Id</small>
                            </p>
                            <p>
                                <small class="text-muted">Cost:</small>
                                <small class="text-warning">@gameItem.Cost</small>
                            </p>
                            @if (!String.IsNullOrEmpty(gameItem.ManaCost))
                            {
                                <p>
                                    <small class="text-muted">Mana Cost:</small>
                                    <small class="text-primary">@gameItem.ManaCost</small>
                                </p>
                            }
                            @if (!String.IsNullOrEmpty(gameItem.Duration))
                            {
                                <p>
                                    <small class="text-muted">Duration:</small>
                                    <small class="text-warning">@gameItem.Duration</small>
                                </p>
                            }
                            @if (!String.IsNullOrEmpty(gameItem.Damage))
                            {
                                <p>
                                    <small class="text-muted">Damage:</small>
                                    <small class="text-warning">@gameItem.Damage</small>
                                </p>
                            }
                            @if (!String.IsNullOrEmpty(gameItem.CastPoint))
                            {
                                <p>
                                    <small class="text-muted">Cast Point:</small>
                                    <small>@gameItem.CastPoint</small>
                                </p>
                            }
                            @if (!String.IsNullOrEmpty(gameItem.CastRange))
                            {
                                <p>
                                    <small class="text-muted">Cast Range:</small>
                                    <small>@gameItem.CastRange</small>
                                </p>
                            }
                            @if (!String.IsNullOrEmpty(gameItem.Cooldown))
                            {
                                <p>
                                    <small class="text-muted">Cooldown:</small>
                                    <small>@gameItem.Cooldown</small>
                                </p>
                            }
                            @if (!String.IsNullOrEmpty(gameItem.TargetFlags))
                            {
                                <p>
                                    <small class="text-muted">Target Flags:</small>
                                    <small>@gameItem.TargetFlags</small>
                                </p>
                            }
                            @if (!String.IsNullOrEmpty(gameItem.TargetTypes))
                            {
                                <p>
                                    <small class="text-muted">Target Types:</small>
                                    <small>@gameItem.TargetTypes</small>
                                </p>
                            }
                            @if (!String.IsNullOrEmpty(gameItem.TeamTargets))
                            {
                                <p>
                                    <small class="text-muted">Team Targets:</small>
                                    <small>@gameItem.TeamTargets</small>
                                </p>
                            }
                            @if (!String.IsNullOrEmpty(gameItem.Declarations))
                            {
                                <p>
                                    <small class="text-muted">Declarations:</small>
                                    <small>@gameItem.Declarations</small>
                                </p>
                            }
                            @if (!String.IsNullOrEmpty(gameItem.DisassembleRule))
                            {
                                <p>
                                    <small class="text-muted">Disassemble Rule:</small>
                                    <small>@gameItem.DisassembleRule</small>
                                </p>
                            }
                            @if (!String.IsNullOrEmpty(gameItem.Shareability))
                            {
                                <p>
                                    <small class="text-muted">Shareability:</small>
                                    <small>@gameItem.Shareability</small>
                                </p>
                            }
                            @if (!String.IsNullOrEmpty(gameItem.ShopTags))
                            {
                                <p>
                                    <small class="text-muted">Shop Tags:</small>
                                    <small>@gameItem.ShopTags</small>
                                </p>
                            }
                            @if (gameItem.InitialCharges.HasValue)
                            {
                                <p>
                                    <small class="text-muted">Initial Charges:</small>
                                    <small>@gameItem.InitialCharges.Value</small>
                                </p>
                            }
                            @if (gameItem.DisplayCharges.HasValue)
                            {
                                <p>
                                    <small class="text-muted">Display Charges:</small>
                                    <small>@gameItem.DisplayCharges.Value</small>
                                </p>
                            }
                            @if (gameItem.StockInitial.HasValue)
                            {
                                <p>
                                    <small class="text-muted">Initial Stock:</small>
                                    <small>@gameItem.StockInitial.Value</small>
                                </p>
                            }
                            @if (gameItem.StockMax.HasValue)
                            {
                                <p>
                                    <small class="text-muted">Max Stock:</small>
                                    <small>@gameItem.StockMax.Value</small>
                                </p>
                            }
                            @if (gameItem.StockTime.HasValue)
                            {
                                <p>
                                    <small class="text-muted">Stock Time:</small>
                                    <small>@gameItem.StockTime.Value</small>
                                </p>
                            }
                            @if (gameItem.IsAlertable.HasValue)
                            {
                                <p>
                                    <small class="text-muted">Alertable:</small>
                                    <small>
                                        @if (gameItem.IsAlertable.Value)
                                        {
                                            <span class="text-success">
                                                <i class="fa fa-check"></i>
                                                Yes
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-danger">
                                                <i class="fa fa-remove"></i>
                                                No
                                            </span>
                                        }
                                    </small>
                                </p>
                            }
                            @if (gameItem.IsDroppable.HasValue)
                            {
                                <p>
                                    <small class="text-muted">Droppable:</small>
                                    <small>
                                        @if (gameItem.IsDroppable.Value)
                                        {
                                            <span class="text-success">
                                                <i class="fa fa-check"></i>
                                                Yes
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-danger">
                                                <i class="fa fa-remove"></i>
                                                No
                                            </span>
                                        }
                                    </small>
                                </p>
                            }
                            @if (gameItem.IsKillable.HasValue)
                            {
                                <p>
                                    <small class="text-muted">Killable:</small>
                                    <small>
                                        @if (gameItem.IsKillable.Value)
                                        {
                                            <span class="text-success">
                                                <i class="fa fa-check"></i>
                                                Yes
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-danger">
                                                <i class="fa fa-remove"></i>
                                                No
                                            </span>
                                        }
                                    </small>
                                </p>
                            }
                            @if (gameItem.IsPermanent.HasValue)
                            {
                                <p>
                                    <small class="text-muted">Permanent:</small>
                                    <small>
                                        @if (gameItem.IsPermanent.Value)
                                        {
                                            <span class="text-success">
                                                <i class="fa fa-check"></i>
                                                Yes
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-danger">
                                                <i class="fa fa-remove"></i>
                                                No
                                            </span>
                                        }
                                    </small>
                                </p>
                            }
                            @if (gameItem.IsPurchasable.HasValue)
                            {
                                <p>
                                    <small class="text-muted">Purchasable:</small>
                                    <small>
                                        @if (gameItem.IsPurchasable.Value)
                                        {
                                            <span class="text-success">
                                                <i class="fa fa-check"></i>
                                                Yes
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-danger">
                                                <i class="fa fa-remove"></i>
                                                No
                                            </span>
                                        }
                                    </small>
                                </p>
                            }
                            @if (gameItem.IsSellable.HasValue)
                            {
                                <p>
                                    <small class="text-muted">Sellable:</small>
                                    <small>
                                        @if (gameItem.IsSellable.Value)
                                        {
                                            <span class="text-success">
                                                <i class="fa fa-check"></i>
                                                Yes
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-danger">
                                                <i class="fa fa-remove"></i>
                                                No
                                            </span>
                                        }
                                    </small>
                                </p>
                            }
                            @if (gameItem.IsStackable.HasValue)
                            {
                                <p>
                                    <small class="text-muted">Stackable:</small>
                                    <small>
                                        @if (gameItem.IsStackable.Value)
                                        {
                                            <span class="text-success">
                                                <i class="fa fa-check"></i>
                                                Yes
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-danger">
                                                <i class="fa fa-remove"></i>
                                                No
                                            </span>
                                        }
                                    </small>
                                </p>
                            }
                            @if (gameItem.IsSupport.HasValue)
                            {
                                <p>
                                    <small class="text-muted">Support:</small>
                                    <small>
                                        @if (gameItem.IsSupport.Value)
                                        {
                                            <span class="text-success">
                                                <i class="fa fa-check"></i>
                                                Yes
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-danger">
                                                <i class="fa fa-remove"></i>
                                                No
                                            </span>
                                        }
                                    </small>
                                </p>
                            }
                            @if (gameItem.ContributesToNetWorthWhenDropped.HasValue)
                            {
                                <p>
                                    <small class="text-muted">Contributes to Net Worth when Dropped:</small>
                                    <small>
                                        @if (gameItem.ContributesToNetWorthWhenDropped.Value)
                                        {
                                            <span class="text-success">
                                                <i class="fa fa-check"></i>
                                                Yes
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-danger">
                                                <i class="fa fa-remove"></i>
                                                No
                                            </span>
                                        }
                                    </small>
                                </p>
                            }
                        </div>
                        <div class="col-xs-6 text-uppercase">
                            @foreach (var abilitySpecial in gameItem.Attributes)
                            {
                                <p>
                                    <small class="text-muted">
                                        @if (!String.IsNullOrEmpty(abilitySpecial.Name))
                                        {
                                            @abilitySpecial.Name
                                        }
                                        else
                                        {
                                            @String.Format("{0}:", abilitySpecial.RawName.Replace("_", " "))
                                        }
                                    </small>
                                    <small>@abilitySpecial.Value</small>
                                </p>
                            }
                            <p>
                                <small class="text-muted">Secret Shop:</small>
                                <small>
                                    @if (gameItem.SecretShop)
                                    {
                                        <span class="text-success">
                                            <i class="fa fa-check"></i>
                                            Yes
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-danger">
                                            <i class="fa fa-remove"></i>
                                            No
                                        </span>
                                    }
                                </small>
                            </p>
                            <p>
                                <small class="text-muted">Side Shop:</small>
                                <small>
                                    @if (gameItem.SideShop)
                                    {
                                        <span class="text-success">
                                            <i class="fa fa-check"></i>
                                            Yes
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-danger">
                                            <i class="fa fa-remove"></i>
                                            No
                                        </span>
                                    }
                                </small>
                            </p>
                            <p>
                                <small class="text-muted">Is Recipe:</small>
                                <small>
                                    @if (gameItem.IsRecipe)
                                    {
                                        <span class="text-success">
                                            <i class="fa fa-check"></i>
                                            Yes
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-danger">
                                            <i class="fa fa-remove"></i>
                                            No
                                        </span>
                                    }
                                </small>
                            </p>
                        </div>
                        @if (!String.IsNullOrEmpty(gameItem.Description))
                        {
                            <div class="col-xs-12">
                                <hr style="margin: 5px 0 5px 0" />
                                <p>
                                    <small class="text-muted">
                                        @gameItem.Description
                                    </small>
                                </p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>
