                                                }
                                        </small>
                                    </p>
                                    }
                                @if (gameItem.IsPermanent.HasValue)
                                    {
                                    <p>
                                        <small class="text-muted">Permanent:</small>
                                        <small>
                                            @if (gameItem.IsPermanent.Value)
