@model IReadOnlyCollection<DotaDb.ViewModels.ItemSetViewModel>

@{
    ViewBag.Title = "Item Sets";
    ViewBag.Description = "There are currently " + Model.Count + " cosmetic sets of items to be purchased in Dota 2. This searchable listing provides detailed data-mined information regarding all sets of items for purchase in the Dota 2 store.";
    ViewBag.HeaderImageName = "bg6.jpg";
    ViewBag.HeaderText = "Cosmetic Set Items";
}

@*@Html.Partial("_BreadcrumbMenuPartial", "Item Sets")*@

<div class="row" style="margin-bottom: 15px">
    <div class="col-md-8 col-md-offset-2">
        @if (!HttpContext.Current.IsDebuggingEnabled)
        {
            <!-- top sets (dotadb) -->
            <ins class="adsbygoogle"
                 style="display:block"
                 data-ad-client="ca-pub-1823005717277864"
                 data-ad-slot="5216549432"
                 data-ad-format="auto"></ins>
            <script>
(adsbygoogle = window.adsbygoogle || []).push({});
            </script>
        }
        else
        {
            <div style="width: 610px; margin: 5px auto;">
                <img src="https://placehold.it/600x90" />
            </div>
        }
    </div>
</div>


@Html.Partial("_TabMenuPartial", "sets")

<div class="row itemset-list">
    @foreach (var itemSet in Model)
    {
        <div class="col-md-4" style="padding: 4px;">
            <div class="well well-sm" style="padding: 5px; margin-bottom: 0">
                <h4>@itemSet.Name</h4>
                <ul class="list-unstyled text-uppercase">
                    @foreach (var item in itemSet.Items)
                    {
                        <li>
                            <small>
                                <i class="fa fa-chevron-right"></i>
                                @item
                            </small>
                        </li>
                    }
                </ul>
            </div>
        </div>
    }
</div>

<div class="row" style="margin-bottom: 15px">
    <div class="col-md-8 col-md-offset-2">
        @if (!HttpContext.Current.IsDebuggingEnabled)
        {
            <!-- bottom sets (dotadb) -->
            <ins class="adsbygoogle"
                 style="display:block"
                 data-ad-client="ca-pub-1823005717277864"
                 data-ad-slot="8170015837"
                 data-ad-format="auto"></ins>
            <script>
(adsbygoogle = window.adsbygoogle || []).push({});
            </script>
        }
        else
        {
            <div style="width: 610px; margin: 5px auto;">
                <img src="https://placehold.it/600x90" />
            </div>
        }
    </div>
</div>

@section scripts {
    @if (!HttpContext.Current.IsDebuggingEnabled)
    {
        <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
    }
}