<div class="container" style="margin-top: 5px">
    <div class="row">
        <div class="col-md-8">
            @foreach (var dotaBlogFeedItem in dotaBlogFeedItems)
            {
                <div class="panel panel-default">
                    <div class="panel-body">
                        <a href="@dotaBlogFeedItem.Link" class="news-item" style="background-image: url('@dotaBlogFeedItem.ImageUrl')">
                            <span class="news-item-tint">
                                <span class="news-item-info">
                                    <h3 style="color: #eee;">@dotaBlogFeedItem.Title</h3>
                                    <h4 style="color: #aaa;">
                                        @dotaBlogFeedItem.PublishDate.ToString("MMMM d, yyyy")
                                    </h4>
                                    <h4 style="color: #aaa;">
                                        @dotaBlogFeedItem.Description
                                    </h4>
                                </span>
                            </span>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private dynamic[] dotaBlogFeedItems;

    protected override async Task OnInitializedAsync()
    {
        dotaBlogFeedItems = new[]
        {
            new { Title = "Title 1", PublishDate = DateTime.Now, Description = "Description 1", Link="https://google.com", ImageUrl="http://via.placeholder.com/256x128" },
