@model DotaDb.ViewModels.HeroSelectViewModel

@{
    ViewBag.Title = "All Heroes";
    ViewBag.Description = String.Format("There are currently {0} agility heroes, {1} intelligence heroes, and {2} strength heroes in Dota 2.", Model.AgilityHeroes.Count, Model.IntelligenceHeroes.Count, Model.StrengthHeroes.Count);
    ViewBag.HeaderImageName = "bg5_fade.jpg";
    ViewBag.HeaderText = "Heroes (Table)";
}

<div class="panel panel-default" style="margin-top: 5px">
    <div class="panel-body">
        <ul class="nav nav-pills">
            <li role="presentation">
                <a href="@Url.Action("index", new { tab = "grid" })">
                    <i class="fa fa-th"></i> Grid
                </a>
            </li>
            <li role="presentation" class="active">
                <a href="@Url.Action("index", new { tab = "table" })">
                    <i class="fa fa-table"></i> Table
                </a>
            </li>
        </ul>
    </div>
</div>
<div class="panel panel-default">
    <table class="table table-condensed hero-table table-bordered" data-toggle="table">
        <thead>
            <tr>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th colspan="3">Gain per Level</th>
                <th></th>
                <th colspan="2">Damage</th>
                <th colspan="3">Attack</th>
            </tr>
            <tr>
                <th>Hero</th>
                <th>Primary</th>
                <th data-sortable="true">HP</th>
                <th data-sortable="true">MP</th>
                <th data-sortable="true">Armor</th>
                <th data-sortable="true">Str</th>
                <th data-sortable="true">Agi</th>
                <th data-sortable="true">Int</th>
                <th data-sortable="true">Str</th>
                <th data-sortable="true">Agi</th>
                <th data-sortable="true">Int</th>
                <th data-sortable="true">Speed</th>
                <th data-sortable="true">Min</th>
                <th data-sortable="true">Max</th>
                <th data-sortable="true">Range</th>
                <th data-sortable="true">Rate</th>
                <th data-sortable="true">Type</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var hero in Model.StrengthHeroes)
            {
                Html.RenderPartial("_HeroTableRowPartial", hero);
            }
            @foreach (var hero in Model.AgilityHeroes)
            {
                Html.RenderPartial("_HeroTableRowPartial", hero);
            }
            @foreach (var hero in Model.IntelligenceHeroes)
            {
                Html.RenderPartial("_HeroTableRowPartial", hero);
            }
        </tbody>
    </table>
</div>