@model DotaDb.ViewModels.GameItemNullableBoolAttributeViewModel

@if (Model.Value.HasValue)
{
    <tr>
        <td>@Model.Name</td>
        <td>
            @if (Model.Value.Value)
            {
                <span class="text-success">
                    <i class="fa fa-check"></i>
                    Yes
                </span>
            }
            else
            {
                <span class="text-danger">
                    <i class="fa fa-remove"></i>
                    No
                </span>
            }
        </td>
    </tr>
}